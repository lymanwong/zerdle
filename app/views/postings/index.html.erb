<p id="notice"><%= notice %></p>

<h1>Now Trending</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Giver</th>
      <th>Category</th>
      <th>Condition</th>
      <th>Price</th>
      <th>Offer shipping</th>
      <th>Shipping size</th>
      <th>Offer local pickup</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postings.each do |posting| %>
      <tr>
        <td><%= image_tag posting.image.url(:medium) %></td>
        <td><%= posting.title %></td>
        <td><%= posting.description %></td>
        <td><%= posting.user.first_name %> <%= posting.user.last_name %></td>
        <td><%= posting.category %></td>
        <td><%= posting.condition %></td>
        <td><%= posting.price %></td>
        <td><%= posting.offer_shipping %></td>
        <td><%= posting.shipping_size %></td>
        <td><%= posting.offer_local_pickup %></td>
        <td><%= link_to 'Show', posting %></td>
        <% if posting.user == current_user %>
          <td><%= link_to 'Edit', edit_posting_path(posting) %></td>
          <td><%= link_to 'Destroy', posting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Posting', new_posting_path %>
<% end %>
